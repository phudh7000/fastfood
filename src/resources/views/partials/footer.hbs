  <script>
    const restaurant = document.querySelector('#count-restaurant');
    const staff = document.querySelector('#count-staff');
    const food = document.querySelector('#count-food');
    const about = document.querySelector('#about');

    const aboutPosition = about.offsetTop - about.clientHeight;

    var maxRestaurant = 50;
    var maxStaff = 350;
    var maxFood = 400;
    restaurant.textContent = 0;
    staff.textContent = 0;
    food.textContent = 0;

    var count = 1;
    function countUp(count, max ,element){
    element.textContent = count;
      if(count < max)
      setTimeout(()=>{
        countUp(++count, max, element);
      },10)
    }


    function startCount(){
      if(window.scrollY >=aboutPosition){
      countUp(count, maxRestaurant, restaurant);
      countUp(count, maxStaff, staff);
      countUp(count, maxFood, food);
      window.removeEventListener('scroll',startCount);
     }
    }

    window.addEventListener('scroll',startCount)
    
  </script>